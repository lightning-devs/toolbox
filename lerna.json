{
  "packages": ["libs/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "version": {
      "allowBranch": "**"
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": "true",
      "ignoreChanges": ["**/*.md", "**/*.spec.jsx", "**/*.spec.js", "**/*.snap", "**/package-lock.json", "**/__stories__/**/*", "**/__data__/**/*"]
    }
  }
}
